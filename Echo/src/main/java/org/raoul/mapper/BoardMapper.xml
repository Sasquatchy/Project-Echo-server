<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.raoul.mapper.BoardMapper">
  
	<sql id="searchCri">
	  	<if test="map !=null">
  		<where>
	  	<foreach collection="map" index="key" item="val">
	  	  <trim prefix="OR">
		  	  <if test="key == 'T'.toString()">
		  	  title like concat('%', #{val} , '%')
		  	  </if>
		  	  <if test="key == 'C'.toString()">
		  	  content like concat('%', #{val} , '%')
		  	  </if>
		  	  <if test="key == 'W'.toString()">
		  	  writer like concat('%', #{val} , '%')
		  	  </if>
	  	  </trim>
	  	</foreach>
	  	</where>
	  	</if> 
	
	</sql>
	
	<resultMap type="BoardVO" id="BoardMap">
		<id property="bno" column="bno" />
		
		<collection property="uid" resultMap="memberMap"></collection>
	</resultMap>

	<resultMap type="MemberVO" id="memberMap">
		<result property="uid" column="uid" />
		
		
	</resultMap>
  	<insert id="insert">
  	insert into echo_board (uid) values(#{uid})
  	</insert>
  	  	
  	<select id="select" resultType="BoardVO">
  	select * from echo_board where bno = #{bno}
  	</select>
  	
  	<update id="update">
  	update echo_board set mno =#{mno}
  	where uid = #{uid}
  	</update>
  	
  	<select id="selectPage" resultType="BoardVO">
  	select * from echo_board 
  	
	<include refid="searchCri"></include>
  	
  	order by bno desc limit #{skip}, #{amount}
  	</select>
  	
  	<select id="selectPageCount" resultType="int">
  	select count(bno) from echo_board 
  	<include refid="searchCri"></include>
  	</select>
